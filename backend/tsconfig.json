{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "ES6",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*.ts", "types/**/*.ts"],
    "exclude": ["node_modules"]
}